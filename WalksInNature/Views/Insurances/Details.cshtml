@model InsuranceDetailsServiceModel

@{
    ViewBag.Title = "Details";
}

<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">Insurance: @Model.StartDate - @Model.EndDate</h1>
        <div>
            <div class="form-group">
                <label for="duration">Duration</label>
                <input type="number" readonly class="form-control" id="duration" name="Duration" value="@Model.Duration">
            </div>
            <div class="form-group">
                <label for="numberOfPeople">Number of people</label>
                <input type="number" readonly class="form-control" id="numberOfPeople" name="NumberOfPeople" value="@Model.NumberOfPeople">
            </div>
            <div class="form-group">
                <label for="limit">Limit of coverage per person</label>
                <input type="number" readonly class="form-control" id="limit" name="Limit" value="@Model.Limit">
            </div>
            <div class="form-group">
                <label for="price">Price per person</label>
                <input type="number" readonly class="form-control" id="price" name="Price" value="@Model.PricePerPerson">
            </div>
            <div class="form-group">
                <label for="totalPrice">Total price</label>
                <input type="number" readonly class="form-control" id="toatlPrice" name="TotalPrice" value="@Model.TotalPrice">
            </div>
            <div class="form-group">
                <label for="refNumber">Reference Number</label>
                <input type="text" readonly class="form-control" id="refNumber" name="RefNumber" value="@Model.RefNumber">
            </div>
        </div>
    </div>
</section>
