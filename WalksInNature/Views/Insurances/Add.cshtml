@model InsuranceFormModel

@{
    ViewBag.Title = "Book Insurance";
}

<div class="row">

    <div class="col-6 text-center">

        <h3>Period of Insurance</h3>
        <p>The period of insurance can be between 1 and 360 days.</p>

        <h3>Price of Insurance</h3>
        <p>You can make insurance for 2000, 5000 or 10000 BGN.</p>
        <p>The price depends of number of days you choose.</p>

        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Limit/Coverage</th>
                    <th scope="col">2000 BGN</th>
                    <th scope="col">5000 BGN</th>
                    <th scope="col">10 000 BGN</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">Price for 3 days</th>
                    <td>3.00 BGN</td>
                    <td>7.50 BGN</td>
                    <td>15.00 BGN</td>
                </tr>
                <tr>
                    <th scope="row">Price for 7 days</th>
                    <td>5.00 BGN</td>
                    <td>12.50 BGN</td>
                    <td>25.00 BGN</td>
                </tr>
                <tr>
                    <th scope="row">Price for 10 days</th>
                    <td>6.00 BGN</td>
                    <td>15.00 BGN</td>
                    <td>30.00 BGN</td>
                </tr>
                <tr>
                    <th scope="row">Price for 15 days</th>
                    <td>7.00 BGN</td>
                    <td>17.50 BGN</td>
                    <td>35.00 BGN</td>
                </tr>
                <tr>
                    <th scope="row">Price for 30 days</th>
                    <td>11.00 BGN</td>
                    <td>27.50 BGN</td>
                    <td>55.00 BGN</td>
                </tr>
                <tr>
                    <th scope="row">Price for 360 days</th>
                    <td>30.00 BGN</td>
                    <td>75.00 BGN</td>
                    <td>150.00 BGN</td>
                </tr>

            </tbody>
        </table>
    </div>
    <div class="col-1"></div>

    <div class="col-5 text-center">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" class="form-control" placeholder="21.09.2021">
                <span asp-validation-for="StartDate" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" class="form-control" placeholder="24.09.2021">
                <span asp-validation-for="EndDate" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfPeople"></label>
                <input asp-for="NumberOfPeople" class="form-control" placeholder="Number of people, maximum 10 persons ...">
                <span asp-validation-for="NumberOfPeople" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Limit"></label>
                <select asp-for="Limit" class="form-control">
                    <option>2000</option>
                    <option>5000</option>
                    <option>10000</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Beneficiary"></label>
                <textarea asp-for="Beneficiary" rows="4" class="form-control" placeholder="Ana Petrova Todorova 6802054030, Ivan Ivanov Ivanov 7004205070, ..."></textarea>
                <span asp-validation-for="Beneficiary" class="small text-danger"></span>
            </div>

            <input class="btn btn-info mt-3" type="submit" value="Book" />
        </form>
    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
