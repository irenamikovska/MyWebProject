<div class="mb-3"></div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstWalk != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@firstWalk.ImageUrl" alt="@firstWalk.Name @firstWalk.Region">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-info" asp-controller="Walks" asp-action="Details" asp-route-id="@firstWalk.Id">@firstWalk.Name (@firstWalk.Region)</a></h5>
                </div>
            </div>
        }
        @if (secondWalk != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@secondWalk.ImageUrl" alt="@secondWalk.Name @secondWalk.Region">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-info" asp-controller="Walks" asp-action="Details" asp-route-id="@secondWalk.Id">@secondWalk.Name (@secondWalk.Region)</a></h5>
                </div>
            </div>
        }
        @if (thirdWalk != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@thirdWalk.ImageUrl" alt="@thirdWalk.Name @thirdWalk.Region">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-info" asp-controller="Walks" asp-action="Details" asp-route-id="@thirdWalk.Id">@thirdWalk.Name (@thirdWalk.Region)</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-3"></div>

<div class="jumbotron">
    <div class="row">
        <h4 class="col-md-4 text-center">
            @Model.TotalWalks Walks
        </h4>
        <h4 class="col-md-4 text-center">
            @Model.TotalUsers Users
        </h4>
        <h4 class="col-md-4 text-center">
            @Model.TotalEvents Events
        </h4>
    </div>
</div>
