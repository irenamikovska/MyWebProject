@model IndexViewModel

@{
    ViewData["Title"] = "Welcome!";
}

@{
    var walks = Model.Walks;
    var firstWalk = walks.Any() ? walks[0] : null;
    var secondWalk = walks.Count > 1 ? walks[1] : null;
    var thirdWalk = walks.Count > 2 ? walks[2] : null;
}

@if (!walks.Any()) 
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the our site for walks in nature!</h1>
        <p class="lead">There are no walks in the system currently available, so why don't you just add one?</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Walks" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Walk</a>
        </p>
    </div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstWalk != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@firstWalk.ImageUrl" alt="@firstWalk.Name @firstWalk.Region">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Walks" asp-action="Details" asp-route-id="@firstWalk.Id">@firstWalk.Name (@firstWalk.Region)</a></h5>
                </div>
            </div>
        }
        @if (secondWalk != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@secondWalk.ImageUrl" alt="@secondWalk.Name @secondWalk.Region">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Walks" asp-action="Details" asp-route-id="@secondWalk.Id">@secondWalk.Name (@secondWalk.Region)</a></h5>
                </div>
            </div>
        }
        @if (thirdWalk != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@thirdWalk.ImageUrl" alt="@thirdWalk.Name @thirdWalk.Region">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Walks" asp-action="Details" asp-route-id="@thirdWalk.Id">@thirdWalk.Name (@thirdWalk.Region)</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-5"></div>

<div class="jumbotron">
    <div class="row">
        <h2 class="col-md-4 text-center">
            @Model.TotalWalks Walks
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalUsers Users
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalEvents Events
        </h2>
    </div>
</div>