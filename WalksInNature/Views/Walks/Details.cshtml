@model WalkDetailsServiceModel

@{
    ViewBag.Title = "Details";
}

<div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" readonly class="form-control" name="Name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" name="ImageUrl" value="@Model.ImageUrl">
    </div>
    <div class="form-group">
        <label asp-for="StartPoint"></label>
        <input asp-for="StartPoint" class="form-control" name="StartPoint" value="@Model.StartPoint">
    </div>
    <div class="form-group">
        <label asp-for="Region"></label>
        <input asp-for="Region" class="form-control" name="Region" value="@Model.Region">
    </div>
    <div class="form-group">
        <label asp-for="Level"></label>
        <input asp-for="Level" class="form-control" name="Level" value="@Model.Level">
    </div>
    <div class="form-group">
        <label asp-for="StartPoint"></label>
        <input asp-for="StartPoint" class="form-control" name="StartPoint" value="@Model.StartPoint">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" name="Description" value="@Model.Description">
    </div>

    <div class="form-group text-center">
        <div class="button-holder">
            <a href="/Walks/AddUserToWalk?walkId=@Model.Id" class="btn btn-info btn-block text-uppercase">Like</a>
        </div>
    </div>
</div>




