@model ContactDetailsServiceModel

@{
    ViewBag.Title = "Details";
}

<h3 class="display-4">Message Details</h3>
<hr />

<dl class="row">
    <dt class="col-sm-2">Sender: </dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Sender email: </dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">Sent on: </dt>
    <dd class="col-sm-10">@Model.CreatedOn</dd>
    <dt class="col-sm-2">Subject: </dt>
    <dd class="col-sm-10">@Model.Subject</dd>
</dl>
<hr />
<h5>Message:</h5>
<div class="col-lg-10">@Model.Message</div>
<br />
<a class="btn btn-info m-1" asp-area="Admin" asp-controller="Contacts" asp-action="All">Back to List</a>
<hr />

