@model IEnumerable<EventServiceModel>

@{
    ViewBag.Title = "Events Administration";
}

<h1>All Events</h1>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Region</th>
            <th scope="col">Level</th>
            <th scope="col">Approved</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventModel in Model)
        {
        <tr>
            <td scope="col">@eventModel.Id</td>
            <td scope="col">@eventModel.Name</td>
            <td scope="col">@eventModel.Region</td>
            <td scope="col">@eventModel.Level</td>
            <td scope="col">@(eventModel.IsPublic ? "Yes" : "No")</td>
            <td scope="col">
                <a asp-area="" asp-controller="Events" asp-action="Delete" asp-route-id="@eventModel.Id" class="btn btn-danger float-right ml-3">Delete</a>
                <a asp-area="" asp-controller="Events" asp-action="Edit" asp-route-id="@eventModel.Id" class="btn btn-warning float-right ml-3">Edit</a>
                <a asp-area="Admin" asp-controller="Events" asp-action="ChangeStatus" asp-route-id="@eventModel.Id" class="btn btn-info float-right ml-3">@(eventModel.IsPublic ? "Hide" : "Show")</a>
                <a asp-area="" asp-controller="Events" asp-action="Details" asp-route-id="@eventModel.Id" asp-route-information="@eventModel.GetEventInformation()" class="btn btn-info float-right ml-3">View</a>
            </td>
        </tr>
        }
    </tbody>
</table>
